<!DOCTYPE html>
<html ng-app="registration">
    <head>
        #parse("static/head.vm")
        <script src="/resources/js/register/register-controller.js"></script>
        <title>Register</title>
    </head>
    <body>
    <div class="container" id="loginContainer">
        <div class="card card-container">
            <form ng-submit="submit()" ng-controller="RegistrationController"  >

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" placeholder="Email" required="" ng-model="user.email"/>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Password" required="" ng-model="user.password"/>
                </div>
                <div><input type="submit" class="btn btn-lg btn-default btn-block " value="Register"/></div>
            </form>
        </div>
    </div>

    </body>
</html>