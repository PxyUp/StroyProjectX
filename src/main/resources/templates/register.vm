<!DOCTYPE html>
<html>
    <head>
        #parse("static/head.vm")
        <script src="/resources/js/register/_module.js"></script>
        <script src="/resources/js/register/register-controller.js"></script>
        <title>Register</title>
    </head>
    <body>
    <div  ng-app="Register" ng-controller="RegisterController" flex layout="row" layout-align="center center">
        <div flex-sm="100" flex-gt-sm="90" flex-gt-md="70" flex-gt-lg="50" class="md-whiteframe-z2">
            <md-content class="md-padding"  flex align-items="center">
                <div flex-sm="100" flex-gt-sm="80" layout-sm="column">
                    <form name="contactForm" ng-submit="submit()">

                        <md-input-container>
                            <label>Email:</label>
                            <input type="email" ng-model="user.email" autocomplete="off" required>
                        </md-input-container>

                        <md-input-container flex>
                            <label>Password:</label>
                            <input type="password" ng-model="user.password" autocomplete="off" required>
                        </md-input-container>

                        <md-button type="submit" class="md-primary"
                                   ng-class="{'md-raised md-hue-1': (contactForm.$dirty && contactForm.$valid) }"
                                   aria-label="Save Project">Register
                        </md-button>
                    </form>
                </div>
            </md-content>
        </div>
    </div>
    </body>
</html>